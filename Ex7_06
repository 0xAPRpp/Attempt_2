# include <iostream>
# include <string>
# include <vector>
# include <cctype>
# include <iomanip>

using namespace std;

int main()
{
	std::string text{};
	const std::string punctuation{ " ,;:.\"!?'\n\\\t" };

	std::vector<std::string> words{};


	std::getline(cin, text, '*');

	size_t start{}, end{}, count{1};
	for (size_t i{}; i < std::size(text);)
	{
		if ((start = text.find_first_not_of(punctuation, i)) == std::string::npos)
			break;
		if ((end = text.find_first_of(punctuation, start + 1)) == std::string::npos)
		{
			i = start + 1;
			while (text.find_first_not_of(punctuation, i) != std::string::npos)
				count++;
			words.push_back(text.substr(start, count));
		}
		else
		{
			end = text.find_first_of(punctuation, start + 1);
			words.push_back(text.substr(start,end-start));
			i = end + 1;
		}
	}	

	size_t perline{};
	for (const std::string& x : words)
	{
		cout << setw(16) << x;
		if (++perline % 5 == 0)
			cout << endl;
	}
	cout << endl;
	cout << std::size(words) << endl;

	system("pause");
}
