# include <iostream>
# include <array>

using namespace std;

double test_ref(double& ref_to_value);
double test_ptr(double* p_to_value);

int main()
{
	double test_value{ 4.2315 };

	cout << test_ref(test_value) << endl;
	cout << test_ptr(&test_value) << endl;

	system("pause");
}

double test_ref(double& ref_to_value)
{
	return ++ref_to_value;
}

double test_ptr(double* p_to_value)
{
	return ++(* (p_to_value));
}
