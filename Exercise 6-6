/*Exercise 6-6. Revisit Exercise 6-4 and replace any raw pointers with smart pointers
there as well.*/

# include <iostream>
# include <cctype>
# include <iomanip>
# include <array>
# include <cmath>
# include <vector>
# include <memory>

using namespace std;

int main()
{
	size_t size{};
	cin >> size;

	std::unique_ptr<std::vector<double>> p_arr_floats{ std::make_unique<std::vector<double>>()};

	double total{};
	for (size_t i{}; i < size; i++)
	{
		(*p_arr_floats).push_back(1 / ((static_cast<double>(i) + 1) * (static_cast<double>(i) + 1)));
		total += (*p_arr_floats)[i];

	}

	cout << total * 6.0 << endl;

	cout << setprecision(15) << std::sqrt(total * 6.0) << endl;

	system("pause");
}
