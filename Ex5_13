# include <iostream>
# include <cctype>
# include <iomanip>
# include <array>
# include <cmath>
# include <vector>

using namespace std;

int main()
{
	std::array<float,4 > these{ 1.0,2.0,3.0,4.0 };
	std::array<float, 4 > those{ 1.0,2.0,3.0,4.0 };
	std::array<float, 4 > them{ 1.0,1.0,4.0,9.0 };

	float a_these[4]{ 1.0,2.0,3.0,4.0 };
	float a_those[4]{ 1.0,2.0,3.0,4.0 };
	float a_them[4]{ 1.0,1.0,4.0,9.0 };

	if (these == those) std::cout << "these and those are equal." << std::endl;
	if (those != them) std::cout << "those and them are not equal." << std::endl;
	if (those > them) std::cout << "those are greater than them." << std::endl;
	if (them < those) std::cout << "them are less than those." << std::endl;

	cout << '\n' << endl;

	if (a_these == a_those) std::cout << "these and those are equal." << std::endl;
	if (a_those != a_them) std::cout << "those and them are not equal." << std::endl;
	if (a_those > a_them) std::cout << "those are greater than them." << std::endl;
	if (a_them > a_those) std::cout << "them are greater than those." << std::endl;


	system("pause");
}	
