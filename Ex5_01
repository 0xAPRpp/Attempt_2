# include <iostream>
# include <iomanip>
# include <array>

int main()
{
	const size_t size{ 6 };

	size_t array_of_heights[size]{};

	size_t total{};

	size_t no_below_avg_height{};

	//storing input of heights
	for (size_t i{}; i < std::size(array_of_heights); i++)
	{
		std::cin >> array_of_heights[i];
		total += array_of_heights[i];
	}

	std::cout << total / size << std::endl;

	for (size_t i{}; i < std::size(array_of_heights); i++)
	{
		if (array_of_heights[i] < (total / size))
			no_below_avg_height++;
	}

	std::cout << no_below_avg_height << std::endl;

	system("pause");
}
