/*Exercise 2 - 5. Your body mass index(BMI) is your weight, w, in kilograms divided by
the square of your height, h, in meters(w / (h * h)).Write a program to calculate the BMI
from a weight entered in poundsand a height entered in feetand inches.A kilogram is
2.2 pounds, and a foot is 0.3048 meters.*/

# include <iostream>

//Global variables for global constants
//using names for literals instead of the values
const double pounds_in_kilogram{ 2.2 };
const double inches_in_feet{12};
const double meters_in_foot{0.3048};

int main()
{
	double weight_in_pounds{};
	double height_in_ft{};
	double inches{};

	std::cout << "Enter weight in pounds and a height in feet and inches: " << std::endl;
	std::cin >> weight_in_pounds >> height_in_ft >> inches;

	//Converting weight in pounds and height in ft/inches to kg and metres
	double weight_in_kgs{};
	double height_in_mtrs{};

	//Converting inches to feet
	height_in_ft += (inches / inches_in_feet);

	weight_in_kgs = weight_in_pounds / pounds_in_kilogram;

	height_in_mtrs = height_in_ft * meters_in_foot;

	//Calculating BMI

	std::cout << "BMI is: " << (weight_in_kgs / (height_in_mtrs * height_in_mtrs)) << std::endl;

	system("pause");
}
