# include <iostream>
# include <array>
# include <string>
//# include <string_view>
# include <vector>

using namespace std;
void printer_chars(std::string_view text);

int main()
{
	char text[4]{'a','b','c','d'};

	cout << text << endl;

	printer_chars(std::string_view{ text,4 });

	system("pause");
}

void printer_chars(std::string_view p_text)
{
	cout << p_text << endl;
}
